{
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 8
    },
    "env": {
        "es6": true,
        "browser": true,
        "webextensions": true
    },
    "rules": {
        "strict": [2, "global"],
        "max-len": [2, {
            "code": 100,
            "ignoreUrls": true
        }],
        "semi": [1, "always"],
        "no-console": [0]
    }
}
